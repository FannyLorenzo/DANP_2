<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EAECEE"
    android:orientation="vertical"
    tools:context=".Controller.video">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22mm">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="9mm"
            android:textAlignment="center"
            android:layout_marginTop="9mm"
            android:layout_marginLeft="3mm"
            android:layout_marginRight="3mm"
            android:textSize="4mm"
            android:textColor="#17202A"
            android:textStyle="bold"
            android:text="Observa el video detenidamente"
            />
    </LinearLayout>
    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:videoId="FVVQhHxVbNc"
        app:autoPlay="false"
        app:showYouTubeButton="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15mm"
        android:layout_marginTop="3mm"
        android:layout_marginLeft="2mm"
        android:layout_marginRight="2mm"
        android:textSize="3mm"
        android:textColor="#17202A"
        android:text="Si considera que debe de repetir el ejercicio con
la ayuda del video al mismo tiempo, pueden ingresar a YouTube y compartirlo con un Smart Tv"
        />

    <Button
        android:id="@+id/realizar"
        android:layout_width="20mm"
        android:layout_height="20mm"
        android:layout_gravity="center"
        android:layout_margin="6mm"
        android:background="@drawable/redondeado"
        android:text="Realizar ejercicio"
        android:textColor="#FFFFFF" />
</LinearLayout>